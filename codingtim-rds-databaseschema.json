{
    "typeName": "codingtim::rds::databaseschema",
    "description": "A custom resource type to create a PostgreSQL database schema.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
    "properties": {
        "SchemaName": {
            "description": "The name of the database schema to create.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9]{1,63}$"
        },
        "SchemaId": {
            "description": "The identifier that will be generated for the resource.",
            "type": "string"
        },
        "SecretArn": {
            "description": "The ARN of the database secret.",
            "type": "string",
            "pattern": "^arn:\\S+:secretsmanager:\\S+:\\d+:secret:.*"
        }
    },
    "additionalProperties": false,
    "required": [
        "SchemaName",
        "SecretArn"
    ],
    "readOnlyProperties": [
        "/properties/SchemaId"
    ],
    "primaryIdentifier": [
        "/properties/SchemaId"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "initech:CreateReport"
            ]
        },
        "read": {
            "permissions": [
                "initech:DescribeReport"
            ]
        },
        "update": {
            "permissions": [
                "initech:UpdateReport"
            ]
        },
        "delete": {
            "permissions": [
                "initech:DeleteReport"
            ]
        },
        "list": {
            "permissions": [
                "initech:ListReports"
            ]
        }
    }
}
